{
  "manifest_version": 2,

  "name": "Pin Me, Bro",
  "description": "Ever wanted a shortcut for pinning tabs? Just Alt+P it, bro.",
  "version": "1.0",

  "permissions": [
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "commands": {
    "pinmebro": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      },
      "description": "Pin me, bro"
    }
  }
}